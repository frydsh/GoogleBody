<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BodyTheme" parent="android:Theme.NoTitleBar">
      <!-- Draw a line instead of a shadow under the title bar. -->
      <!-- Really only has an effect on 2.2 (Froyo) and earlier. -->
      <item name="android:windowContentOverlay">@drawable/title_bar_divider
      </item>
    </style>

    <style name="QuickactionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>        
        <item name="android:background">@drawable/header_bar_button</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">2px</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/header_divider_line</item>
    </style>

    <style name="Animations" />

    <style name="Animations.QuickactionAnimation">
        <item name="@android:windowEnterAnimation">@anim/quickaction_appear
        </item>
        <item name="@android:windowExitAnimation">@anim/quickaction_disappear
        </item>
    </style>
</resources>
